.another_item
  -if @item.category.parent != nil
    = link_to "#{@item.category.parent.parent.name}"
  -else
    = link_to "#{@item.category.name}"
  = link_to " をもっと見る","#", class: "another_item__category"
  .another_item__box
    .another_item__box__link
      -@categories.each do |item|
        .product
          = link_to item_path(item.id) do
            .another_item__box__image
              - if item.brand && item.buyer_id
                = image_tag ("icon-04.png")
                %spen.out SOLD
              - else item.brand
                = image_tag "#{item.item_images[0].image}"   
              %h3 
                = item.name
              %ul
                %li 
                  = item.price
                  %spen.unit円              
                %li 
                  = icon("fa","star")
                  0
              %p.another_item__tax (税込)
